<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/chat_user_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:textAlignment="viewEnd"
        android:visibility="visible">



            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/chat_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:background="@drawable/chat_rounded_cornorx"
                android:text="hi i am user."
                android:textColor="#000" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
             />
        <!--android:src="@drawable/arrow_bg1"-->
        <ImageView
            android:id="@+id/chat_user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_sender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
android:layout_gravity="center"
            android:id="@+id/chat_sender_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"

                    android:textAlignment="viewStart" />
                <!--android:src="@drawable/arrow_bg1"-->
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/chat_sender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/chat_rounded_cornor"
                    android:padding="8dp"
                    android:text="hi i am user"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp">

                <!--    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="userNmae"
                        android:textSize="10dp" />-->

                <TextView
                    android:id="@+id/sender_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="10:00 pm"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>