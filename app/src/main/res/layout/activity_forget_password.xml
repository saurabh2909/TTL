<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#42A1CF"
    android:padding="5dp"
    tools:context="com.example.saubhagyam.thetalklist.com.Application.saubhagyam.thetalklist.ForgetPassword">
    <!--android:background="@drawable/ttlbgimage"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@mipmap/ttl_signup_logo" />

        <LinearLayout
            android:id="@+id/LinearMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="87dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_forget_password"
                    android:textColor="#3498DB"
                    android:textSize="25sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ECEFF1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ImageSendEmail"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/email" />

                    <EditText
                        android:id="@+id/sendEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#00000000"
                        android:inputType="textEmailAddress"
                        android:hint="Send Email"
                        android:textColor="#85929E"
                        android:textColorHint="#85929E"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                     android:layout_marginTop="10dp"
                    android:layout_below="@id/sendEmail"
                    android:background="#ECEFF1" />


            </LinearLayout>

            <TextView
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:text=" "
                android:textSize="20dp" />

            <Button
                android:id="@+id/forgetPassword_Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/capt"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:textColor="#FDFEFE" />
        </LinearLayout>

        <Button
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:background="#00000000"
            android:text="Back To Login"
            android:textAllCaps="false"
            android:textColor="#FDFEFE"
            android:textSize="15sp" />


    </LinearLayout>
</ScrollView>
