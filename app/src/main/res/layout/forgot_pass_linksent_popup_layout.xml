<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/talknow_confirmation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#fff"
    android:backgroundTint="#80000000"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Reset Password link has been sent to your mail address."
            android:textColor="#5DADE2"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="You wanna use our inbuild browser?"
            android:textSize="25dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/forgotpass_popup_yesbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_orange_back"
                android:text="Yes" />

            <Button
                android:id="@+id/forgotpass_popup_nobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:background="@drawable/round_button_orange_back"
                android:text="No" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>