<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ttlbgimage">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ttl_signup_logo"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:id="@+id/relative_layout_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txts9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earn or learn"
            android:textSize="25sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/txts10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON DEMAND!"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_alignBaseline="@id/txts9"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/txts9"
            android:textColor="#fff"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeper3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/relative_layout_a"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/personimg3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/BtnRelalayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeper3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/Startbtn1"
            android:background="@drawable/capt"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:text="Start Here"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"/>

    </RelativeLayout>



</RelativeLayout>
