<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#42A1CF"
    android:padding="5dp"
    tools:context="com.example.saubhagyam.thetalklist.com.Application.saubhagyam.thetalklist.Login">
    <!--android:background="@drawable/ttlbgimage"-->
    <ScrollView
        android:id="@+id/scrollLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/LoginLL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ttl_signup_logo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LoginLL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LoginLL1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/email" />

                    <EditText
                        android:id="@+id/emaillogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="#00000000"
                        android:hint="Email Address"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textColor="#85929E"
                        android:textColorHint="#85929E"
                        android:textSize="15sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#F8F9F9" />
                </LinearLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/password" />

                    <EditText
                        android:id="@+id/passwordLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:hint="Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#85929E"
                        android:textColorHint="#85929E"
                        android:textSize="15sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#F8F9F9" />
                </LinearLayout>

                <Button
                    android:id="@+id/signinButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/capt"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LoginLL3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/LoginLL2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="2">



                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebook_login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:text="@string/com_facebook_loginview_log_in_button_continue"
                        android:layout_gravity="center" >
                    </com.facebook.login.widget.LoginButton>

                <LinearLayout
                    android:id="@+id/LoginLL4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/loginCreateAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="#00000000"
                        android:textColor="#ffffff"
                        android:text="Create Account"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/loginforgetPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="#00000000"
                        android:text="Forgot Password?"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textAlignment="textEnd"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
