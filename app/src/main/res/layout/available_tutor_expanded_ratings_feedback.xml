<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="80dp"
        android:padding="10dp"
        android:src="@drawable/black_person"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Full Name"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/biography_date_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:text="Date"/>
            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:minHeight="5dp"
                android:numStars="5"
                android:progressTint="@color/yellow" />
        </LinearLayout>
        <TextView
            android:id="@+id/review_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textSize="12dp"
            android:textColor="#607D8B"
            android:text="bfbfbbfabsdbakbui balfbiasbsdkjfkabsfigigfajkfbaskbcbalisdbalhcbal nzmjfcbwebvfyujhbjhbjhbaslbhfasjklfljkbfail"
            />

    </LinearLayout>

</LinearLayout>