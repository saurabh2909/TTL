<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ttlbgimage">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ttl_signup_logo"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/relative_layout_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txts6"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Join a 1:1 video session"
            android:textSize="25sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txts7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in"
                android:layout_marginLeft="40dp"
                android:textSize="28sp"
                android:layout_below="@+id/txts6"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/txts8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONE CLICK."
                android:layout_marginLeft="5dp"
                android:layout_alignBaseline="@id/txts7"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_toRightOf="@+id/txts7"
                android:textColor="#fff"/>
        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeper1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/relative_layout_y"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/personimg2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
