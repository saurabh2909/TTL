<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.saubhagyam.thetalklist.com.Application.saubhagyam.thetalklist.StudentFeedBack">

    <LinearLayout
        android:id="@+id/feedBackStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Feedback"
            android:textColor="#05B1F9"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#F8F9FB" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llfeedStu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feedtext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Rate your tutor"
                android:textColor="#85929E" />

            <RatingBar
                android:id="@+id/student_feedback_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="5dp"
                android:numStars="5" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#F8F9F9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llfeedStu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/report_inappropriate_behaviour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report inappropriate behavior"
                android:textColor="#85929E" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#F8F9F9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llfeedStu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feedtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/commentOn"
                android:textColor="#85929E" />

            <MultiAutoCompleteTextView
                android:id="@+id/student_feedback_msg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:gravity="start"
                android:background="@drawable/background_border_black"
                android:backgroundTint="#00000000"
                android:hint="Write Message..."
                android:textSize="15dp"

                android:textColorHint="#85929E" />

            <Button
                android:id="@+id/studentFeedback_submitButton"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/capt"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="#F8F9F9" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
