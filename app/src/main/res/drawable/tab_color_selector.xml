<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:drawable="@drawable/tab_background_color_1" android:state_selected="true"/>
<item android:drawable="@drawable/tab_background_color_2" android:state_selected="false" android:state_pressed="false" android:state_focused="false"
    >
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Bottom indicator color for the UNSELECTED tab state -->
        <item android:top="-5dp" android:left="-5dp" android:right="-5dp">
            <shape android:shape="rectangle">
                <stroke android:color="#000000" android:width="2dp"/>
            </shape>
        </item>
    </layer-list>

</item>
</selector>